<div id="maincol">

<div id="top_section"><%=@title%></div>
<div id="body_section">
<div id="contenido">
  <b>Marca:</b>
  <%=h @laptop.marca %>
<br />
  <b>Modelo:</b>
  <%=h @laptop.modelo %>
<br />
  <b>Color:</b>
  <%=h @laptop.color %>
<br />
  <b>Defecto:</b>
  <%=h @laptop.defecto %>
<br />
  <b>Comentarios:</b>
  <%=h @laptop.comentarios %>
<br />
  <b>Usuario:</b>
  <%=h @laptop.usuario %>
<br />
  <b>Contra:</b>
  <%=h @laptop.contra %>
<br />
  <b>Estado:</b>
  <%=h @laptop.estado %>
<br />
  <b>Paquete:</b>
  <%=h @laptop.paquete %>
<br />
  <b>Respaldo:</b>
  <%=h @laptop.respaldo %>
<br />
  <b>Cliente:</b>
  <%=h "#{@laptop.user.fname} #{@laptop.user.lname}" %>
<br />
  <b>Total:</b>
  <%=h @laptop.total %>
<br />

<% @laptop.colaborators.each do |c|%>
  <b>Colaborador:</b>
  <%=h "#{c.user.fname} #{c.user.lname}" %>
<br />

  <b>Estado:</b>
  <%=h c.status %>
<br />
<%end%>

<%= link_to 'Edit', edit_laptop_path(@laptop) %> |
<%= link_to 'Back', laptops_path %> |
<%= link_to 'Delete', @laptop, :confirm => 'Are you sure?', :method => :delete %>

</div>
</div>
<div id="bottom_section"></div>
</div>
