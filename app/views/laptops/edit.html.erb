<h1>Editing laptop</h1>

<% form_for(@laptop) do |f| %>
	<% fields_for(@colaborator) do |c|%>
  <%= f.error_messages %>

  <p>
    <%= f.label :marca %><br />
    <%= f.text_field :marca %>
  </p>
  <p>
    <%= f.label :modelo %><br />
    <%= f.text_field :modelo %>
  </p>
  <p>
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </p>
  <p>
    <%= f.label :defecto %><br />
    <%= f.text_area :defecto %>
  </p>
  <p>
    <%= f.label :comentarios %><br />
    <%= f.text_area :comentarios %>
  </p>
  <p>
    <%= f.label :usuario %><br />
    <%= f.text_field :usuario %>
  </p>
  <p>
    <%= f.label :contra %><br />
    <%= f.text_field :contra %>
  </p>
  <p>
    <%= f.label :paquete %><br />
    <%= f.text_field :paquete %>
  </p>
  <p>
    <%= f.label :respaldo %><br />
    <%= f.check_box :respaldo %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :total %><br />
    <%= f.text_field :total %>
  </p>
  <% if current_user.colaborator? or current_user.admin?%>
  	<p>
    <%= c.label :status %><br />
    <%= c.text_field :status %>
    <%= c.text_field :laptop_id, :value => @laptop.id%>
    <%= c.text_field :user_id, :value => current_user.id%>
  	</p>
  <%end%>
  <p>
    <%= f.submit 'Update' %>
  </p>
  <%end%>
<% end %>

<%= link_to 'Show', @laptop %> |
<%= link_to 'Back', laptops_path %>
