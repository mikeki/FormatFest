        $j(document).ready(function(){
          $j("#laptop_submit").attr("disabled", true);
        });
        $j(function(){
              $j("#laptop_terms").change(function(){
                 if($j("#laptop_terms").attr("checked")){
                  $j("#laptop_submit").removeAttr("disabled");
                }else{
                   $j("#laptop_submit").attr("disabled", true);
                }
                
              });
              
        });
         

      </script>
