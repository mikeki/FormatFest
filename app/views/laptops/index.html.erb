<h1>Listing laptops</h1>

<table>
  <tr>
    <th>Marca</th>
    <th>Modelo</th>
    <th>Color</th>
    <th>Defecto</th>
    <th>Comentarios</th>
    <th>Usuario</th>
    <th>Contra</th>
    <th>Estado</th>
    <th>Paquete</th>
    <th>Respaldo</th>
    <th>User</th>
    <th>Total</th>
  </tr>

<% @laptops.each do |laptop| %>
  <tr>
    <td><%=h laptop.marca %></td>
    <td><%=h laptop.modelo %></td>
    <td><%=h laptop.color %></td>
    <td><%=h laptop.defecto %></td>
    <td><%=h laptop.comentarios %></td>
    <td><%=h laptop.usuario %></td>
    <td><%=h laptop.contra %></td>
    <td><%=h laptop.estado %></td>
    <td><%=h laptop.paquete %></td>
    <td><%=h laptop.respaldo %></td>
    <td><%=h laptop.user_id %></td>
    <td><%=h laptop.total %></td>
    <td><%= link_to 'Show', laptop %></td>
    <td><%= link_to 'Edit', edit_laptop_path(laptop) %></td>
    <% if !current_user.colaborator?%>
    <td><%= link_to 'Destroy', laptop, :confirm => 'Are you sure?', :method => :delete %></td>
    <%end %>
  </tr>
<% end %>
</table>

