<%if current_user.admin? or current_user.colaborator?%>
<%= render :partial => 'formaBusqueda'%>
<%end%>

<h2>Bienvenido <%= "#{@user.fname} #{@user.lname}"%></h2>
<p>
Tiene <%= pluralize(@user.laptops.count, "laptop") %>
</p>

<p>
<% @user.colaborators.each do |c|%>
	<%= link_to "Laptop #{c.status}", :controller => "laptops", :action => "show", :id => c.laptop_id%>
<%end%>
</p>

<% @user.laptops.each do |l|%>
<p><%= link_to l.marca, :controller => "laptops", :action => "show", :id => l.id %></p>

<% end %>

<% form_for(@laptop) do |f| %>
  <%= f.error_messages %>

	<%= render :partial => 'laptops/form', :locals => {:f => f}%>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
