<div id="top_section"><span><%= @title %></span></div>
	<div id="body_section">
		<div id="contenido">
		<% form_for @post do |f| %>
  		<%= f.error_messages %>
  		
    	<%= f.label :title, 'Titulo' %><br />
	    <%= f.text_field :title %>
  		<br /><br />
  	  <%= f.label :content, "Mensaje" %><br />
  	  <%= f.text_area :content, :rows => "20", :cols => "60"%>
  		<br />
  		<%= f.submit 'Publicar' %>
		<% end %>
		</div>
	</div>
<div id="bottom_section"></div>
