<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= titulo %></title>
    <% if request.request_uri == '/admin/estadisticas'%>
       <meta content="900" http-equiv="REFRESH"> </meta>
    <% end -%>
    <%= stylesheet_link_tag 'saitc' %>
    
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery-1.4.2' %>
   
  </head>
  <body>
  
  <script>
   var $j = jQuery.noConflict();
                  $j(document).ready(function() {
                    setTimeout(hideFlashMessages, 2000);
                  });

                  function hideFlashMessages() {
                    $j('#flash_notice, #flash_error').fadeOut(2000);
                  }
   </script>
    <script>
   var $j = jQuery.noConflict();
                  $j(document).ready(function() {
                    setTimeout(hideErrorMessages, 10000);
                  });

                  function hideErrorMessages() {
                    $j('#errorExplanation').fadeOut(2000);
                  }
   </script>
    <div id="majorContent">
    	<div id="header">
        	<%= link_to image_tag ("logo_FF.png" , :id=>"logo"), root_path %>
        	<%= link_to image_tag ("boton_SAITC_un.png", :id=>"botonHeader", :mouseover => "boton_SAITC_sel.png"), "#"%>
        	<%= link_to image_tag ("boton_FF_sel.png", :id=>"botonHeader"), root_path %>
        	<%= link_to image_tag ("boton_SW_un.png", :id=>"botonHeader", :mouseover => "boton_SW_sel.png"), "#" %>
      </div>
      <div id="wrapper" class="clearfix" >
      	<div id="leftcol">
        	<% flash.each do |key, value| %>
        		<%= content_tag(:div, value, :id => "flash_#{key}") %>
        	<% end %> 
        		<%if current_user%>
        			<div id="top_subsection">
        				<span>
        					Bienvenido,  
            			<%= link_to "#{current_user.fname.capitalize}", user_path(current_user) -%>!
            		</span>
            	</div>
            	<div id="subsection">
            			<%= link_to image_tag ("bhome.png", :border=>"0"), root_path%>
            			<%= link_to image_tag ("bnew_laptop.png", :border=>"0"), new_laptop_path%>
            			<%= link_to image_tag ("bcontact.png", :border=>"0"), "#"%>
            			<%= link_to image_tag ("bperfil.png", :border=>"0"), current_user%>
            			<%= link_to image_tag ("blogout.png", :border=>"0"), logout_path%>
          	<%else%>
          		<div id="top_subsection"><span>Iniciar sesión</span></div>
          		<div id="subsection">
          		<%= render :partial=>'user_sessions/new'-%>
          		<div id="maincolsub"> 
          		<%= button_to "Registro", registro_path%>
          		</div>
          		</div>
          	<%end%>
        	</div>
    	  	<div id="bottom_subsection"></div>
    	  <%if current_user%>
    	  	<%if current_user.admin? or current_user.colaborator?%>
    	  		<div id="top_subsection">
        			<span>
        				Administración
            	</span>
            </div>
            <div id="subsection">
              <%if current_user.admin?%>
            	  <%= link_to "Nueva Noticia", new_post_path%><br/>
            	<%end%>
            	<%= link_to "Estadísticas", estadisticas_path%><br />
            	<%= link_to "Recepción", '/laptops?estado=0' %><br />
            	<%= link_to "Lista de Usuarios", users_path%><br />
            	<%= link_to "Lista de Laptops", laptops_path%><br />
            </div>
            <div id="bottom_subsection"></div>
						<%= render :partial => 'users/formaBusqueda'%>
						<%= render :partial => 'laptops/formaBusqueda'%>
					<%end%>
    	  	<div id="top_subsection">
						<span id="laptops">Tiene <%= pluralize(current_user.laptops.count, "laptop") %> en reparación:</span>
					</div>
					<div id="subsection">
						<% current_user.laptops.each do |l|%>
							<div id="wrapper" class="clearfix" >
								<div id="leftcolLap">
									<%if l.estado > 2%>
										<%= link_to image_tag ("boton_lap_fin.png", :border=>"0"), :controller => "laptops", :action => "show", :id => l.id -%>
									<%else%>
										<%= link_to image_tag ("boton_lap_reg.png", :border=>"0"), :controller => "laptops", :action => "show", :id => l.id -%>
									<%end%>
								</div>
								<div id="maincolLap">
									Laptop: <%= l.marca%>
									<br />
									Color: <%= l.color%>
									<br />
									<%if l.estado < 3%>
										<span id="nofin">No finalizada.</span>
									<%elsif l.estado == 3%>
										<span id="fin">Finalizada.</span>
									<%else%>
										<span id="fin">Entregada.</span>
									<%end%>
								</div>
							</div> 
						<% end %>
						<%= link_to image_tag ("bnew_laptop.png", :id=>"botonLap", :border=>"0"), new_laptop_path%>
						<br />
					</div>
					<div id="bottom_subsection"></div>
					<% end %>
    	  </div>
    			<%= yield %>
    			
    			<br />
    	</div>				
    	<div id="footer">
    	  <div id="patrocinadores">
    	    <span id="tema">Nuestros Patrocinadores:</span>
    	  </div>
    	  <div id="links">
    	    <div id="texto">
        	  <%= link_to "Home", root_path %> | 
        	  <%if current_user%>
        	    <%= link_to "Registrar Laptop", new_laptop_path %> | 
        	    <%= link_to "Ver Perfil", current_user%> | 
        	    <%= link_to "Editar Perfil", edit_user_path(current_user)%> |
        	    <%= link_to "Cerrar Sesión", logout_path %>
        	  <%else%>
        	    <%= link_to "Registrarse", registro_path  %>
        	  <%end%>
        	  <%= link_to image_tag ("bface.png" , :id=>"facebook"), "http://www.facebook.com" %>
      	  </div>
    	  </div>
    	</div>
    </div>
  </body>
</html>
