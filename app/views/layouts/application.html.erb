<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= titulo %></title>
    <%= stylesheet_link_tag 'saitc' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery-1.4.2' %>
  </head>
  <body>
    <div id="majorContent">
          	<div id="header">
                  	  <%if current_user %>
                  	  <%= link_to image_tag ("logo_FF.png" , :id=>"logo"), current_user %>
                  	  <%= link_to image_tag ("boton_SAITC_un.png", :id=>"botonHeader"), "#"%>
                  		<%= link_to image_tag ("boton_FF_sel.png", :id=>"botonHeader"), current_user %>
                  		<%= link_to image_tag ("boton_SW_un.png", :id=>"botonHeader"), "#" %>
                  		<% else %>
                  		<%= link_to image_tag ("logo_FF.png" , :id=>"logo"), root_path %>
                  		<%= link_to image_tag ("boton_SAITC_un.png", :id=>"botonHeader"), "#"%>
                  		<%= link_to image_tag ("boton_FF_sel.png", :id=>"botonHeader"), root_path %>
                  		<%= link_to image_tag ("boton_SW_un.png", :id=>"botonHeader"), "#" %>
                  		<% end %>
          	</div>
                          	<% flash.each do |key, value| %>
                                <%= content_tag(:div, value, :id => "flash_#{key}") %>
                              <% end %> 
    	      <div id="top_subsection"></div>
                    	<div id="subsection">
                    		<%if current_user%>
                    			<%= button_to "Editar #{current_user.fname.capitalize} #{current_user.lname.capitalize}", edit_user_path(:id => current_user.id)%>
                    			<%= button_to "Cerrar sesión", logout_path %>
                    		<%else%>
                    		<span>Iniciar sesión</span>
                    			<%= render :partial=>'user_sessions/new'-%> 
                    			<%= button_to "Registrar", new_user_path%>
                    		<%end%>
                    	</div>
    	        <div id="bottom_subsection"></div>
    <%= yield %>
    <br />
    </div>
    
  </body>
</html>
