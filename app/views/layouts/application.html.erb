<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= titulo %></title>
    <%= stylesheet_link_tag 'saitc' %>
    
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery-1.4.2' %>

  </head>
  <body>
  
  <script>
   var $j = jQuery.noConflict();
                  $j(document).ready(function() {
                    setTimeout(hideFlashMessages, 2000);
                  });

                  function hideFlashMessages() {
                    $j('#flash_notice, #flash_error').fadeOut(2000);
                  }
   </script>
  
    <div id="majorContent">
    	<div id="header">
        	<%= link_to image_tag ("logo_FF.png" , :id=>"logo"), root_path %>
        	<%= link_to image_tag ("boton_SAITC_un.png", :id=>"botonHeader"), "#"%>
        	<%= link_to image_tag ("boton_FF_sel.png", :id=>"botonHeader"), root_path %>
        	<%= link_to image_tag ("boton_SW_un.png", :id=>"botonHeader"), "#" %>
      </div>
      <div id="wrapper" class="clearfix" >
      	<div id="leftcol">
        	<% flash.each do |key, value| %>
        		<%= content_tag(:div, value, :id => "flash_#{key}") %>
        	<% end %> 
        		<%if current_user%>
        			<div id="top_subsection">
        				<span id="logged">
        					Bienvenido,  
            			<%= link_to "#{current_user.fname.capitalize}", user_path(current_user) -%>!
            		</span>
            	</div>
            	<div id="subsection">
            			<%= link_to image_tag ("bhome.png"), root_path%>
            			<%= link_to image_tag ("bedit_profile.png"), edit_user_path(:id => current_user.id)%>
            			<%= link_to image_tag ("bnew_laptop.png"), new_laptop_path%>
            			<%= link_to image_tag ("bcontact.png"), "#"%>
            			<%= link_to image_tag ("blogout.png"), logout_path%>
          	<%else%>
          		<div id="top_subsection"><span>Iniciar sesión</span></div>
          		<div id="subsection">
          		<%= render :partial=>'user_sessions/new'-%> 
          		<%= button_to "Registrar", new_user_path%>
          	<%end%>
        	</div>
    	  	<div id="bottom_subsection"></div>
    	  <%if current_user%>
    	  	<%if current_user.admin? or current_user.colaborator?%>
						<%= render :partial => 'users/formaBusqueda'%>
					<%end%>
    	  	<div id="top_subsection">
						<span>Tiene <%= pluralize(current_user.laptops.count, "laptop") %> en reparación:</span>
					</div>
					<div id="subsection">
						<% current_user.laptops.each do |l|%>
							<div id="wrapper" class="clearfix" >
								<div id="leftcolLap">
									<%if l.colaborators.count > 2%>
										<%= link_to image_tag ("boton_lap_fin.png"), :controller => "laptops", :action => "show", :id => l.id -%>
									<%else%>
										<%= link_to image_tag ("boton_lap_reg.png"), :controller => "laptops", :action => "show", :id => l.id -%>
									<%end%>
								</div>
								<div id="maincolLap">
									Laptop: <%= l.marca%>
									<br />
									Color: <%= l.color%>
									<br />
									<%if l.colaborators.count < 3%>
										No finalizada.
									<%elsif l.colaborators.count == 3%>
										Finalizada.
									<%else%>
										Entregada.
									<%end%>
								</div>
							</div> 
						<% end %>
						<%= button_to "Registrar nueva laptop", new_laptop_path%>
						<br />
					</div>
					<div id="bottom_subsection"></div>
					<% end %>
    	  </div>
    			<%= yield %>
    			
    			<br />
    	</div>				
    	
    </div>
  </body>
</html>
