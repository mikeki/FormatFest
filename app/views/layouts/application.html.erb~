<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= titulo %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
    	<div id="user-nav">
    		<%if current_user%>
    			<%id = current_user.id%>
    			<%= link_to "Editar #{current_user.fname} #{current_user.lname}", edit_user_path(id)%> |
    			<%= link_to "Logout", logout_path %>
    		<%else%>
    			<%= link_to "Registrar", new_user_path%> |
    			<%= link_to "Login", login_path%>
    		<%end%>
    	</div>
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>
      
      <%= yield %>
    </div>
  </body>
